<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Counselling App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    @RenderSection("Styles", required: false)

    <script>
        // Error recovery
        window.onerror = function (msg, url, line) {
            console.error('Error:', msg, 'at', url, ':', line);
            // Show error UI if content fails to load
            setTimeout(function () {
                if (document.body.innerText.trim().length < 100) {
                    showErrorUI();
                }
            }, 2000);
        };

        function showErrorUI() {
            var errorDiv = document.createElement('div');
            errorDiv.className = 'container mt-4';
            errorDiv.innerHTML = `
                <div class="alert alert-warning">
                    <h4>Having trouble loading the page?</h4>
                    <p>Try these options:</p>
                    <div class="btn-group">
                        <a href="/Dashboard/debug" class="btn btn-info">Debug View</a>
                        <a href="/Dashboard/tech-report" class="btn btn-secondary">Technical Report</a>
                        <button onclick="location.reload()" class="btn btn-primary">Reload Page</button>
                    </div>
                </div>
            `;
            document.body.insertBefore(errorDiv, document.body.firstChild);
        }
    </script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill text-primary me-2"></i>Student Counselling App
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard"
                                asp-action="Index">Dashboard</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @if (!string.IsNullOrEmpty(Context.TraceIdentifier))
        {
            <div class="debug-info small text-muted mb-2">
                Request ID: @Context.TraceIdentifier |
                Auth Status: @(User.Identity?.IsAuthenticated == true ? "Authenticated" : "Not Authenticated") |
                User: @(User.Identity?.Name ?? "None")
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Student Counselling App
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-decoration-none me-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-decoration-none me-2"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-decoration-none"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Monitor page load status
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded at:', new Date().toISOString());
            console.log('Auth status:', @Json.Serialize(User.Identity?.IsAuthenticated));
            console.log('Request ID:', @Json.Serialize(Context.TraceIdentifier));
        });
    </script>
</body>

</html>








