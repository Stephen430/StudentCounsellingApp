@model StudentCounsellingApp.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Schedule Appointment";
}

@section Styles {
    <link rel="stylesheet" href="~/css/appointment-fix.css" />
}

<div class="container appointment-create">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card dashboard-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-calendar-plus me-2"></i>Schedule New Appointment</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="CounsellorId" class="form-label"></label> <select asp-for="CounsellorId"
                                asp-items="ViewBag.Counsellors" class="form-select">
                                <option value="">-- Select a Counsellor --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label"></label> <input
                                asp-for="AppointmentDate" class="form-control" type="date"
                                min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label"></label> <input asp-for="StartTime"
                                class="form-control" type="time" />
                            <small class="text-muted">Appointments are one hour long by default</small>
                        </div>

                        <div class="mb-3"> <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" />
                        </div>

                        <div class="mb-3"> <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Appointments
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-calendar-check me-2"></i>Schedule Appointment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}