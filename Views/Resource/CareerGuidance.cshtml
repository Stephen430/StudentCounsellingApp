@{
    ViewData["Title"] = "Career Guidance Resources";
}

<div class="container">
    <h1 class="my-4">Career Guidance Resources</h1>
    <p class="lead mb-5">Tools and information to help you plan your career path, prepare for job applications, and develop professional skills.</p>

    <div class="row mb-5">
        <div class="col-md-8">
            <h3>Articles & Reading Materials</h3>
            <div class="list-group shadow-sm">
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Creating a Stand-Out Resume and Cover Letter</h5>
                        <small>15 min read</small>
                    </div>
                    <p class="mb-1">Tips and templates for crafting professional application documents that highlight your strengths and experiences.</p>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Mastering the Job Interview Process</h5>
                        <small>20 min read</small>
                    </div>
                    <p class="mb-1">Comprehensive guide to preparing for interviews, including common questions, body language, and follow-up strategies.</p>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Networking for Career Success</h5>
                        <small>12 min read</small>
                    </div>
                    <p class="mb-1">How to build and maintain professional relationships that can help advance your career goals.</p>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Career Services</h5>
                </div>
                <div class="card-body">
                    <p><strong>Career Center Hours:</strong><br>Mon-Fri, 9am-5pm<br>Student Union, Room 305</p>
                    <p><strong>Resume Review Drop-ins:</strong><br>Tuesdays & Thursdays, 1pm-3pm</p>
                    <p><strong>Mock Interview Sessions:</strong><br>By appointment only<br>Schedule online through the portal</p>
                    <hr>
                    <p class="mb-0">Career advisors are available for one-on-one consultations to discuss your specific goals and challenges.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h3>Video Resources</h3>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-img-top bg-light text-center py-5">
                    <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">LinkedIn Profile Optimization</h5>
                    <p class="card-text">How to create an effective LinkedIn profile that attracts recruiters and showcases your professional brand.</p>
                    <small class="text-muted">Duration: 18:45</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-img-top bg-light text-center py-5">
                    <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Salary Negotiation Techniques</h5>
                    <p class="card-text">Strategies for navigating compensation discussions and advocating for your value in the workplace.</p>
                    <small class="text-muted">Duration: 14:30</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-img-top bg-light text-center py-5">
                    <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Finding Internships in Your Field</h5>
                    <p class="card-text">Resources and approaches for identifying and securing valuable internship opportunities relevant to your career goals.</p>
                    <small class="text-muted">Duration: 16:20</small>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Resources
        </a>
    </div>
</div>
