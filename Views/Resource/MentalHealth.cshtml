@section Scripts {
    <script src="~/js/mental-health-advanced.js"></script>
    <script>
        // Initialize additional features
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize daily tip
            window.mentalHealthApp.initializeDailyTip();

            // Setup range sliders
            const stressLevel = document.getElementById('stressLevel');
            const energyLevel = document.getElementById('energyLevel');
            const stressValue = document.getElementById('stressValue');
            const energyValue = document.getElementById('energyValue');

            if (stressLevel && stressValue) {
                stressLevel.addEventListener('input', function () {
                    stressValue.textContent = this.value;
                });
            }

            if (energyLevel && energyValue) {
                energyLevel.addEventListener('input', function () {
                    energyValue.textContent = this.value;
                });
            }

            // Add smooth scroll to sections
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
}
