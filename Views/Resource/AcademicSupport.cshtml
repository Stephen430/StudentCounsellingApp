@section Scripts {
    <script src="~/js/academic-support-advanced.js"></script>
    <script>
        // Additional inline scripts for enhanced functionality
        $(document).ready(function () {
            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function (event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 800);
                }
            });

            // Enhanced hover effects
            $('.academic-card, .tool-card').hover(
                function () {
                    $(this).addClass('hover-effect');
                },
                function () {
                    $(this).removeClass('hover-effect');
                }
            );

            // Auto-update progress every 30 seconds
            setInterval(function () {
                if (window.academicApp) {
                    window.academicApp.updateProgress();
                }
            }, 30000);

            // Add loading states to buttons
            $('.btn-advanced, .tool-button').on('click', function (e) {
                const $btn = $(this);
                const originalText = $btn.text();

                if (!$btn.hasClass('no-loading')) {
                    $btn.addClass('loading');
                    $btn.html('<i class="bi bi-hourglass-split me-2"></i>Loading...');

                    setTimeout(() => {
                        $btn.removeClass('loading');
                        $btn.html(originalText);
                    }, 1500);
                }
            });

            // Initialize tooltips for enhanced UX
            $('[title]').each(function () {
                $(this).attr('data-bs-toggle', 'tooltip');
            });

            // Enhanced search with keyboard shortcuts
            $(document).on('keydown', function (e) {
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                    e.preventDefault();
                    $('#academicSearch').focus();
                }
            });

            // Add keyboard shortcut hint
            $('#academicSearch').attr('placeholder', 'Search resources... (Ctrl+K)');

            // Enhanced tab switching with keyboard
            $(document).on('keydown', function (e) {
                if (e.altKey && e.key >= '1' && e.key <= '5') {
                    e.preventDefault();
                    const tabs = $('.nav-tab-advanced');
                    const index = parseInt(e.key) - 1;
                    if (tabs[index]) {
                        $(tabs[index]).click();
                    }
                }
            });

            // Add ripple effect to buttons
            $('.btn-advanced, .tool-button').on('click', function (e) {
                const $btn = $(this);
                const ripple = $('<span class="ripple"></span>');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.css({
                    width: size,
                    height: size,
                    left: x,
                    top: y
                });

                $btn.append(ripple);

                setTimeout(() => ripple.remove(), 600);
            });            // Ripple effect CSS is now in the external CSS file

            // Initialize the advanced features
            setTimeout(() => {
                if (window.academicApp) {
                    console.log('Academic Support App initialized successfully');
                }
            }, 1000);
        });
    </script>
