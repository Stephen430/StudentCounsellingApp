@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/landing-page.css" />
    <link rel="stylesheet" href="~/css/timeline.css" />
    <link rel="stylesheet" href="~/css/testimonials.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}

<!-- Hero Section with Background Image - Full Viewport Height -->
<div class="hero-section text-center text-white">
    <div class="hero-overlay">
        <h1 class="animate__animated animate__fadeInDown">Empowering <span class="txt-type" data-wait="3000"
                data-words='["Academic Success", "Mental Wellbeing", "Student Potential", "Personal Growth"]'> </span>
        </h1>
        <p class="animate__animated animate__fadeInUp animate__delay-1s">Your journey at university should be
            transformative and fulfilling. We're here to support you every step of the way.</p>

        <div class="mt-4 animate__animated animate__fadeIn animate__delay-2s">
            <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-primary me-3">Get Started</a>
            <a asp-controller="Appointment" asp-action="Create" class="btn btn-lg btn-outline-light">Book
                Appointment</a>
        </div>
    </div>
    <div class="hero-scroll-down animate__animated animate__fadeIn animate__delay-3s">
        <i class="bi bi-chevron-down"></i>
    </div>
</div>

<!-- Services Section -->
<div class="services-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-heading">How We Can Help</h2>
                <p class="text-muted">Comprehensive support tailored to your university journey</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="service-card">
                    <div class="card-body text-center">
                        <div class="service-icon">

                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h4>Personal Counselling</h4>
                        <p>Book confidential one-on-one sessions with our experienced counsellors to discuss any
                            concerns affecting your academic performance or wellbeing.</p>
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary mt-3">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card">
                    <div class="card-body text-center">

                        <div class="service-icon">

                            <i class="bi bi-journal-text"></i>
                        </div>
                        <h4>Resources Library</h4>
                        <p>Access our extensive collection of self-help materials, articles, videos and tools designed
                            to support your mental wellbeing and academic success.</p>
                        <a asp-controller="Resource" asp-action="Index" class="btn btn-primary mt-3">Explore
                            Resources</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">

                <div class="service-card">
                    <div class="card-body text-center">
                        <div class="service-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h4>Specialist Team</h4>
                        <p>Our diverse team of professional counsellors specialize in various areas including stress
                            management, anxiety, depression, and academic performance.</p>
                        <a asp-controller="Counsellor" asp-action="Index" class="btn btn-primary mt-3">Meet Our Team</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="how-it-works-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-heading">How It Works</h2>
                <p class="text-muted">Get the support you need in four simple steps</p>
            </div>
        </div>


        <div class="row">

            <div class="col-12">
                <div class="timeline">
                    <div class="timeline-container left" data-aos="fade-right">
                        <div class="timeline-content">
                            <div class="timeline-icon">
                                <i class="bi bi-person-plus"></i>
                                <span class="timeline-number">1</span>
                            </div>
                            <h3>Create Your Account</h3>
                            <p>Sign up for a secure and confidential account that gives you access to all our service
                                s and resources.</p>
                            <a asp-controller="Account" asp-action="Register" class="timeline-link">Get Started <i
                                    class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>

                    <div class="timeline-container right" data-aos="fade-left">
                        <div class="timeline-content">
                            <div class="timeline-icon">
                                <i class="bi bi-card-checklist"></i>
                                <span class="timeline-number">2</span>
                            </div>
                            <h3>Complete Brief Assessment</h3>

                            <p>Take a quick assessment to help us understand your needs and match you with the right
                                counsellor.</p>
                        </div>
                    </div>

                    <div class="timeline-container left" data-aos="fade-right">
                        <div class="timeline-content">
                            <div class="timeline-icon">
                                <i class="bi bi-calendar2-plus"></i>
                                <span class="timeline-number">3</span>
                            </div>
                            <h3>Book Your Session</h3>
                            <p>Choose a convenient time from available slots and select in-person or virtual meeting.
                            </p>
                            <a asp-controller="Appointment" asp-action="Create" class="timeline-link">Schedule Now <i
                                    class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>

                    <div class="timeline-container right" data-aos="fade-left">
                        <div class="timeline-content">
                            <div class="timeline-icon">
                                <i class="bi bi-chat-square-text"></i>
                                <span class="timeline-number">4</span>
                            </div>
                            <h3>Start Your Journey</h3>
                            <p>Meet with your counsellor and begin working together on strategies tailored to your
                                needs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Testimonial Section -->
