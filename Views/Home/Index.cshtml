    <div class="testimonial-overlay"></div>
    <div class="container position-relative">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-heading text-white animate__animated animate__fadeInDown">Student Success Stories
                </h2>
                <p class="text-white animate__animated animate__fadeIn animate__delay-1s">Hear from students who've
                    transformed their university experience</p>
            </div>
        </div>

