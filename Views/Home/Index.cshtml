            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="testimonial-shape shape-left d-none d-xl-block"></div>
        <div class="testimonial-shape shape-right d-none d-xl-block"></div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-4" data-aos="fade-up">
                <div class="stat-item">
                    <h3 class="stat-number"><span class="counter">500</span>+</h3>
                    <p class="stat-text">Students Supported Annually</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-item">
                    <h3 class="stat-number"><span class="counter">15</span>+</h3>
                    <p class="stat-text">Expert Counsellors</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-item">
                    <h3 class="stat-number"><span class="counter">95</span>%</h3>
                    <p class="stat-text">Student Satisfaction</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="why-choose-us-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-heading">Why Choose Us</h2>
                <p class="text-muted">We're committed to your well-being and academic success</p>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0" data-aos="fade-right">
                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                    alt="University counsellor with student" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6" data-aos="fade-left">
                <div class="feature-list">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="feature-text">
                            <h4>Complete Confidentiality</h4>
                            <p>Your privacy is our priority. All sessions and information shared remain strictly
                                confidential.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-person-check"></i>
                        </div>
                        <div class="feature-text">
                            <h4>Qualified Professionals</h4>
                            <p>Our team consists of licensed counsellors with specialized training in student mental
                                health.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="feature-text">
                            <h4>Flexible Scheduling</h4>
                            <p>Book appointments that fit around your classes and study schedule.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-laptop"></i>
                        </div>
                        <div class="feature-text">
                            <h4>Virtual & In-Person Options</h4>
                            <p>Choose between face-to-face sessions or convenient online consultations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Student Resources Section -->
<div class="resources-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-heading">Resources & Tools</h2>
                <p class="text-muted">Access valuable materials to support your mental wellbeing</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6" data-aos="fade-up">
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="bi bi-book"></i>
                    </div>
                    <h4>Self-Help Guides</h4>
                    <p>Comprehensive guides on managing stress, anxiety, and improving wellbeing.</p>
                    <a asp-controller="Resource" asp-action="Index" asp-route-category="guides"
                        class="resource-link">Browse Guides <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="bi bi-journal-check"></i>
                    </div>
                    <h4>Wellbeing Journals</h4>
                    <p>Interactive journals to track your mood, progress and daily reflections.</p>
                    <a asp-controller="Resource" asp-action="Index" asp-route-category="journals"
                        class="resource-link">View Journals <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="bi bi-play-circle"></i>
                    </div>
                    <h4>Video Resources</h4>
                    <p>Expert-led tutorials and talks on mental health topics for students.</p>
                    <a asp-controller="Resource" asp-action="Index" asp-route-category="videos"
                        class="resource-link">Watch Videos <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="bi bi-calendar2-week"></i>
                    </div>
                    <h4>Workshop Calendar</h4>
                    <p>Register for upcoming workshops and group sessions on campus.</p>
                    <a asp-controller="Resource" asp-action="Workshops" class="resource-link">See Schedule <i
                            class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>

        <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="400">
            <a asp-controller="Resource" asp-action="Index" class="btn btn-primary">Explore All Resources</a>
        </div>
    </div>
</div>

<!-- Contact CTA Section -->
<div class="contact-cta-section">
    <div class="container">
        <div class="cta-card" data-aos="zoom-in">
            <div class="row align-items-center">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <h2>Ready to take the first step?</h2>
                    <p class="mb-0">Schedule your first counselling session today and start your journey to better
                        well-being.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-lg btn-white">Book Your
                        Session</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-waypoints@2.0.5/lib/jquery.waypoints.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery.counterup@2.1.0/jquery.counterup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script src="~/js/landing-page.js" asp-append-version="true"></script>
    <script src="~/js/testimonials.js" asp-append-version="true"></script>
    <script>
        // Initialize AOS animation library
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // Initialize counter animation
        $('.counter').counterUp({
            delay: 10,
            time: 1000
        });

        // Smooth scroll for hero section arrow
        $(document).ready(function () {
            $('.hero-scroll-down').click(function () {
                $('html, body').animate({
                    scrollTop: $('.services-section').offset().top
                }, 800);
            });
        });
    </script>
}






                       
                       
                       
                           
                       
                       